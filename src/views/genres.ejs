<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<link rel="stylesheet" href="stylesheets/style.css">
		<link rel="stylesheet" href="../stylesheets/style.css">
		<title>DH Movies</title>
	</head>
	  
  	<body>

		<div class="container col">
			<% if (typeof moviesFromGenre != 'undefined') { %>
				
				<!-- Titulo -->
				<div class="container col">
					<h1>Películas del género: <%= genre %> </h1>
				</div>
				
				<!-- Lista con los resultados de la busqueda -->
				<ul>
					<% moviesFromGenre.forEach(movie => { %>
						<li><a href="/movies/<%= movie.id %>"><%= movie.title %></a></li>
					<% }); %>
				</ul>

			<% } %>
		</div>
		
		<div class="container col">
			<% if (typeof genres != 'undefined') { %>

				<!-- Titulo -->
				<div class="container col">
					<h1>Géneros</h1>
				</div>

				<!-- Lista de todos los generos -->
				<ul>
					<% genres.forEach(genre => { %>
						<li><a href="/genres/<%= genre.id %>"><%= genre.name %></a></li>
					<% }); %>
				</ul>
			<% } %>
		</div>
	
  	</body>
</html>